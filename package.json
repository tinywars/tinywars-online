{
  "name": "tinywars-online",
  "private": true,
  "version": "0.4.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp ./RELEASE.md ./dist/README.md",
    "preview": "vite preview",
    "typecheck": "tsc",
    "test:all": "ts-mocha **/*.spec.ts",
    "test": "ts-mocha",
    "test:watch": "ts-mocha --watch",
    "coverage": "nyc npm run test:all",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --fix --ext .ts",
    "release:major": "npm version minor && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:patch": "npm version minor && git push && git push --tags"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/howler": "^2.2.7",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "eslint": "^8.13.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eventemitter3": "^3.1.2",
    "howler": "^2.2.3",
    "lodash": "^4.17.21",
    "nyc": "^15.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.0"
  },
  "mocha": {
    "watch-files": [
      "**/*.ts"
    ]
  },
  "nyc": {
    "exclude": "**/*.spec.ts",
    "reporter": "text"
  }
}
